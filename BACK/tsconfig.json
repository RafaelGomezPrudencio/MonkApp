{
  "extends": "./base.json", // Ajusta este path al que corresponda en tu repositorio
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./public",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true, // Habilita compilaciones incrementales
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json", // Archivo para guardar la información de compilación incremental
    "noUncheckedIndexedAccess": true // Mejora la seguridad de los índices
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}